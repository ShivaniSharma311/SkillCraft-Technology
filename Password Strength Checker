import java.util.Scanner;

public class PasswordStrengthChecker {

    // Method to check password strength
    public static String checkStrength(String password) {
        int score = 0;

        // Check if password is at least 8 characters
        if (password.length() >= 8) {
            score++;
        }

        // Check for lowercase letters
        if (password.matches(".*[a-z].*")) {
            score++;
        }

        // Check for uppercase letters
        if (password.matches(".*[A-Z].*")) {
            score++;
        }

        // Check for numbers
        if (password.matches(".*[0-9].*")) {
            score++;
        }

        // Check for special characters
        if (password.matches(".*[!@#$%^&*()_+\\-=\\[\\]{};':\"\\\\|,.<>/?].*")) {
            score++;
        }

        // Interpret score in human terms
        switch (score) {
            case 5: return "Very Strong";
            case 4: return "Strong";
            case 3: return "Moderate";
            case 2: return "Weak";
            default: return "Very Weak";
        }
    }

    // Main method for user input
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to the Password Strength Checker!");
        System.out.print("Enter your password: ");
        String inputPassword = scanner.nextLine();

        String strength = checkStrength(inputPassword);

        System.out.println("Your password strength is: " + strength);
    }
}
